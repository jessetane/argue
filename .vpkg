#!/usr/bin/env bash
#
# .vpkg for argue
#

name() {
  echo "argue"
}

version() {
  echo "stable"
}

repository() {
  echo "https://github.com/jessetane/argue"
}

build() {
  
  # get source
  [ ! -d "$src"/.git ] && git clone "$(repository)" "$src"
  
  # checkout code
  git fetch --all
  git fetch --tags
  
  # install
  mkdir -p "$lib"/"$build"
  cd "$lib"/"$build"
  cp -R "$src"/.git ./
  git reset --hard "$version"
}
